@page
@model MascotaFeliz.App.Presentacion.Pages.EditPropietarioModel
@{
}
<h2>Editar Propietario:@Model.PropietarioMascotas.Nombre</h2> 
<form method="post">
    <input type="hidden" asp-for="PropietarioMascotas.Id" />
    <div class="form-group">
        <label asp-for="PropietarioMascotas.Nombre"></label>
        <input asp-for="PropietarioMascotas.Nombre" class="for-control">
        <span class="text-danger" asp-validation-for="PropietarioMascotas.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="PropietarioMascotas.Apellidos"></label>
        <input asp-for="PropietarioMascotas.Apellidos" class="for-control">
        <span class="text-danger" asp-validation-for="PropietarioMascotas.Apellidos"></span>
    </div>
    <div class="form-group">
        <label asp-for="PropietarioMascotas.Telefono"></label>
        <input asp-for="PropietarioMascotas.Telefono" class="for-control">
        <span class="text-danger" asp-validation-for="PropietarioMascotas.Telefono"></span>
    </div>
    <div class="form-group">
        <label asp-for="PropietarioMascotas.Direccion"></label>
        <input asp-for="PropietarioMascotas.Direccion" class="for-control">
        <span class="text-danger" asp-validation-for="PropietarioMascotas.Direccion"></span>
    </div>
    <button type="submit" class="btn btn-primary">Grabar</button>
</form>
<a asp-page="./List" class="btn-default">Lista de Visitas</a>