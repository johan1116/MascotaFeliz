@page
@model MascotaFeliz.App.Presentacion.Pages.Formulario2Model
@{
     ViewData["Title"] = "Propietario";
     
}

<div class="framework">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Registro Propietario</title>

        <link rel="stylesheet" href="estilos.css">
        <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="~/css/estilos.css" />
    </head>
    <div>
        <div class="fondo">
            <div class="Encabezado">
                <img class="imagen1" src="~/imagen/pet4.png">
                <h1 class="logo"> Mundo <span>Paticas</span> </h1>
            </div>
            <div class="contenido">
                <form action="" method="POST" id="form">
                    <h1>Responsable del Peludito</h1>
                    <div class="form">

                        <div class="grupo">
                            <input type="text" name="" id="name" required><span class="barra"></span>
                            <label for="">Nombres</label>
                        </div>
                        <div class="grupo">
                            <input type="text" name="" id="apellidos" required><span class="barra"></span>
                            <label for="">Apellidos</label>
                        </div>
                        <div class="grupo">
                            <input inputmode="numeric" name="" id="documento" required><span class="barra"></span>
                            <label for="">Número de identificación</label>
                        </div>
                        <div class="grupo">
                            <input type="tel" name="" id="telefono" required><span class="barra"></span>
                            <label for="">Teléfono</label>
                        </div>
                        <div class="grupo">
                            <input type="text" name="" id="direccion" required><span class="barra"></span>
                            <label for="">Dirección</label>
                        </div>
                        <div class="grupo">
                            <input type="email" name="" id="correo" required><span class="barra"></span>
                            <label for="">Correo</label>
                        </div>

                        <div class="bloque"><button type="submit">Registrarme</button></div>
                    </div>
                </form>
                <div class="info">
                    <h4><b>Mayor Información</b></h4>
                    <ul>

                        <li> <i class="material-icons">location_on</i> Avenida Esperanza N° 26-16 </li>
                        <li> <i class="material-icons">call</i> 601 - 8641223 </li>
                        <li> <i class="material-icons">mail</i> mundopaticas@gmail.com </li>
                        <li><i class="material-icons">whatsapp</i> +57 3132256147 </li>
                        <li><i class="material-icons">facebook</i> <a href="https://www.facebook.com">Mundo Paticas</a>
                        </li>


                    </ul>
                    <p>
                        Somos una empresa especializada <br> en el cuidado de tu mascota.<br>
                        Ofrecemos una amplia gama de <br> servicios de alta calidad y<br>
                        experiencia confortable para ti y tu peludito.<br>
                    </p>
                    <p class="Yotta">Elaborado por</p>
                    <img class="imagen2" src="~/imagen/yota1.png">

                </div>
            </div>
        </div>

    </div>
</div>